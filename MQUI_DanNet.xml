<?xml version = "1.0"?>
<XML ID = "EQInterfaceDefinitionLanguage">
	<Schema xmlns = "EverQuestData" xmlns:dt = "EverQuestDataTypes"/>
	
	<STMLbox item="Interface_ChatOutput">
		<ScreenID>Interface_ChatOutput</ScreenID>
		<DrawTemplate>WDT_Inner</DrawTemplate>
		<RelativePosition>true</RelativePosition>
		<Style_VScroll>true</Style_VScroll>
		<AutoStretch>true</AutoStretch>
		<LeftAnchorOffset>5</LeftAnchorOffset>
		<TopAnchorOffset>5</TopAnchorOffset>
		<RightAnchorOffset>5</RightAnchorOffset>
		<BottomAnchorOffset>5</BottomAnchorOffset>
		<RightAnchorToLeft>false</RightAnchorToLeft>
		<BottomAnchorToTop>false</BottomAnchorToTop>
		<Style_Border>true</Style_Border>
		<Style_Transparent>true</Style_Transparent>
	</STMLbox>
	
	<TileLayoutBox item="DanChatboxLayout">
		<DrawTemplate>WDT_Inner</DrawTemplate>
		<Style_Border>true</Style_Border>
		<RelativePosition>true</RelativePosition>
		
		<TopAnchorToTop>false</TopAnchorToTop>
		<TopAnchorOffset>100</TopAnchorOffset>
		
		<BottomAnchorToTop>false</BottomAnchorToTop>
		
		<RightAnchorToLeft>false</RightAnchorToLeft>
		<RightAnchorOffset>5</RightAnchorOffset>
		
		<LeftAnchorToLeft>true</LeftAnchorToLeft>
		<LeftAnchorOffset>5</LeftAnchorOffset>
		
		<AutoStretch>true</AutoStretch>
		<Spacing>0</Spacing>
		<ResizeLast>false</ResizeLast>
		<Style_Transparent>true</Style_Transparent>
		<HorizontalFirst>false</HorizontalFirst>

		<!-- Pieces go here. -->
		<Pieces>Interface_ChatOutput</Pieces>
	</TileLayoutBox>

	<Label item="Query_InputBox_Label">
		<ScreenID>Query_InputBox_Label</ScreenID>
		<Font>3</Font>
		<RelativePosition>true</RelativePosition>
		<Location>
			<X>5</X>
			<Y>5</Y>
		</Location>
		<Size>
			<CX>50</CX>
			<CY>20</CY>
		</Size>
		<Text>Query</Text>
		<TextColor>
			<R>0</R>
			<G>125</G>
			<B>255</B>
		</TextColor>
		<NoWrap>true</NoWrap>
		<AlignCenter>false</AlignCenter>
		<AlignRight>false</AlignRight>
	</Label>
	
	<Editbox item="Query_InputBox_Input">
		<ScreenID>Query_InputBox_Input</ScreenID>
		<DrawTemplate>WDT_Inner</DrawTemplate>
		<Style_Border>true</Style_Border>
		<Font>3</Font>
		<RelativePosition>true</RelativePosition>
		<Location>
			<X>100</X>
			<Y>3</Y>
		</Location>
		<Size>
			<CX>100</CX>
			<CY>20</CY>
		</Size>
		<TextColor>
			<R>255</R>
			<G>255</G>
			<B>255</B>
		</TextColor>
	</Editbox>
	
	<!--Combo Boxes start here -->
	<Label item="Interface_Peers_Label">
		<ScreenID>Interface_Peers_Label</ScreenID>
		<Font>3</Font>
		<RelativePosition>true</RelativePosition>
		<Location>
			<X>5</X>
			<Y>125</Y>
		</Location>
		<Size>
			<CX>50</CX>
			<CY>20</CY>
		</Size>
		<Text>Peers</Text>
		<TextColor>
			<R>255</R>
			<G>255</G>
			<B>255</B>
		</TextColor>
		<NoWrap>true</NoWrap>
		<AlignCenter>false</AlignCenter>
		<AlignRight>false</AlignRight>
	</Label>
	
	<Combobox item="Interface_Peers_ComboBox">
		<ScreenID>Interface_Peers_ComboBox</ScreenID>
		<Font>1</Font>
		<DrawTemplate>WDT_Inner</DrawTemplate>

		<RelativePosition>true</RelativePosition>
		<Location>
			<X>305</X>
			<Y>145</Y>
		</Location>
		<Size>
			<CX>100</CX>
			<CY>20</CY>
		</Size>

		<ListHeight>90</ListHeight>
		<Button>BDT_Combo</Button>
		<Style_Border>true</Style_Border>
		<TextColor>
			<R>255</R>
			<G>255</G>
			<B>255</B>
		</TextColor>
	</Combobox>
	
	<Button item="Interface_AddQuery_Button">
		<ScreenID>Interface_AddQuery_Button</ScreenID>
		<Size>
			<CX>160</CX>
			<CY>20</CY>
		</Size>
		<Location>
			<X>210</X>
			<Y>20</Y>
		</Location>
		<Style_Checkbox>false</Style_Checkbox>
		<Text>Add Query</Text>
		<TooltipReference>Add Query from the Query InputBox</TooltipReference>
		<Template>BDT_BigNormal</Template>
	</Button>
	
	<!-- Interface_RemoveQuery_Button -->
	<Button item="Interface_RemoveSelectedQuery_Button">
		<ScreenID>Interface_RemoveSelectedQuery_Button</ScreenID>
		<Size>
			<CX>160</CX>
			<CY>20</CY>
		</Size>
		<Location>
			<X>210</X>
			<Y>20</Y>
		</Location>
		<Style_Checkbox>false</Style_Checkbox>
		<Text>Remove Selected Query</Text>
		<TooltipReference>Remove the selected query from the listbox.</TooltipReference>
		<Template>BDT_BigNormal</Template>
	</Button>
  
	<TileLayoutBox item="DanInputboxLayout">
		<DrawTemplate>WDT_Inner</DrawTemplate>
		<Style_Border>false</Style_Border>
		<RelativePosition>true</RelativePosition>
		
		<TopAnchorToTop>true</TopAnchorToTop>
		<TopAnchorOffset>0</TopAnchorOffset>
		
		<BottomAnchorToTop>false</BottomAnchorToTop>
		<BottomAnchorOffset>100</BottomAnchorOffset>
		
		<RightAnchorToLeft>true</RightAnchorToLeft>
		<RightAnchorOffset>190</RightAnchorOffset>
		
		<LeftAnchorOffset>5</LeftAnchorOffset>
		
		
		<AutoStretch>true</AutoStretch>
		<Spacing>0</Spacing>

		<ResizeLast>false</ResizeLast>
		<Style_Transparent>true</Style_Transparent>
		<HorizontalFirst>true</HorizontalFirst>
		<Style_VScroll>true</Style_VScroll>

		<!-- Pieces go here. -->
		<Pieces>Query_InputBox_Label</Pieces>
		<Pieces>Query_InputBox_Input</Pieces>
		<Pieces>Interface_Peers_Label</Pieces>
		<Pieces>Interface_Peers_ComboBox</Pieces>
		<Pieces>Interface_AddQuery_Button</Pieces>
		<Pieces>Interface_RemoveSelectedQuery_Button</Pieces>
		

	</TileLayoutBox>
		<Listbox item = "Interface_QueryList_Listbox">
		<ScreenID>DPS_TopList</ScreenID>
		<DrawTemplate>WDT_Inner</DrawTemplate>
		<AutoStretch>true</AutoStretch>
		<TopAnchorToTop>true</TopAnchorToTop>
		<BottomAnchorToTop>false</BottomAnchorToTop>
		<LeftAnchorToLeft>true</LeftAnchorToLeft>
		<RightAnchorToLeft>false</RightAnchorToLeft>
		<LeftAnchorOffset>2</LeftAnchorOffset>
		<TopAnchorOffset>5</TopAnchorOffset>
		<RightAnchorOffset>2</RightAnchorOffset>
		<BottomAnchorOffset>2</BottomAnchorOffset>
		<Style_Border>true</Style_Border>
		<Style_VScroll>true</Style_VScroll>
		<Style_HScroll>true</Style_HScroll>
		<Style_AutoHScroll>true</Style_AutoHScroll>
		<Font>2</Font>
		<Columns>
			<Width>24</Width>
			<Heading>#</Heading>
		</Columns>
		<Columns>
			<Width>75</Width>
			<Heading>Observation</Heading>
		</Columns>
		<Columns>
			<Width>150</Width>
			<Heading>Value</Heading>
		</Columns>
	</Listbox>

	<TileLayoutBox item="Interface_Listbox_Layout">
	<DrawTemplate>WDT_Inner</DrawTemplate>
		<RelativePosition>true</RelativePosition>
		<AutoStretch>true</AutoStretch>
		<Style_Border>false</Style_Border>
		<TopAnchorToTop>true</TopAnchorToTop>
		<BottomAnchorToTop>false</BottomAnchorToTop>
		<RightAnchorToLeft>false</RightAnchorToLeft>
		<LeftAnchorOffset>200</LeftAnchorOffset>
		<TopAnchorOffset>10</TopAnchorOffset>
		<BottomAnchorOffset>100</BottomAnchorOffset>
		<HorizontalFirst>false</HorizontalFirst>
		<Style_Transparent>true</Style_Transparent>
		<Style_HScroll>true</Style_HScroll>
		<Spacing>5</Spacing>

		<!-- Pieces go here. -->
		<Pieces>Interface_QueryList_Listbox</Pieces>

	</TileLayoutBox>

	<Page item="Interface_Settings">
		<ScreenID>Interface_Settings</ScreenID>
		<!-- <RelativePosition>true</RelativePosition> -->
		<RelativePosition>false</RelativePosition>
		<DrawTemplate>WDT_Def</DrawTemplate>
		<TabText>Settings</TabText>
		<TabTextColor>
			<R>255</R>
			<G>255</G>
			<B>255</B>
		</TabTextColor>
		<TabTextActiveColor>
			<R>255</R>
			<G>255</G>
			<B>0</B>
		</TabTextActiveColor>
		<Style_Sizable>true</Style_Sizable>
		<Location>
			<X>0</X>
			<Y>22</Y>
		</Location>
		<Size>
			<CX>578</CX>
			<CY>302</CY>
		</Size>
		<Pieces>TileLayoutBox:DanInputboxLayout</Pieces>
		<Pieces>TileLayoutBox:Interface_Listbox_Layout</Pieces>
		<Pieces>TileLayoutBox:DanChatboxLayout</Pieces>
	</Page>
	
	<TabBox item="Interface_Tabs">
		<ScreenID>Subwindows</ScreenID>
		<Location>
			<X>0</X>
			<Y>0</Y>
		</Location>
		<RelativePosition>true</RelativePosition>
		<AutoStretch>true</AutoStretch>

		<LeftAnchorToLeft>true</LeftAnchorToLeft>
		<LeftAnchorOffset>0</LeftAnchorOffset>

		<RightAnchorOffset>0</RightAnchorOffset>
		<RightAnchorToLeft>false</RightAnchorToLeft>

		<TopAnchorOffset>0</TopAnchorOffset>
		<TopAnchorToTop>true</TopAnchorToTop>

		<BottomAnchorOffset>0</BottomAnchorOffset>
		<BottomAnchorToTop>false</BottomAnchorToTop>

		<TabBorderTemplate>FT_DefTabBorder</TabBorderTemplate>
		<PageBorderTemplate>FT_DefPageBorder</PageBorderTemplate>
		
		<Pages>Interface_Settings</Pages>
	</TabBox>

	<Screen item = "InterfaceWnd">
		<RelativePosition>false</RelativePosition>
		<Location>
			<X>0</X>
			<Y>0</Y>
		</Location>
		<Size>
			<CX>475</CX>
			<CY>220</CY>
		</Size>
		<Text>MQ2Dan Interface</Text>

		<Style_Transparent>false</Style_Transparent>
		<DrawTemplate>WDT_Def</DrawTemplate>
		<Style_Titlebar>true</Style_Titlebar>
		<Style_Closebox>true</Style_Closebox>
		<Style_Minimizebox>true</Style_Minimizebox>
		<Style_Border>true</Style_Border>
		<Style_Sizable>true</Style_Sizable>
		<Escapable>false</Escapable>
		
		<Pieces>Interface_Tabs</Pieces>
	</Screen>

</XML>